<Window x:Class="project_05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project_05"
        mc:Ignorable="d"
        Title="MainWindow" Height="239" Width="472">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <WrapPanel Grid.Row="0" Grid.Column="0" Margin="10">
            <TextBlock Width="100" Height="25" Margin="10" FontSize="15">Введите число</TextBlock>
            <TextBox Width="100" Height="25" Margin="10" Name="input"  FontSize="15" ></TextBox>
            <Button Height="25" Name="calculate" Click="calculate_Click">✔</Button>
            <TextBlock Margin="10,10,0,0" Width="425" Height="28" FontSize="15">Простое число Мерсенна:</TextBlock>
            <TextBlock Margin="10,0,0,0" Width="425" Height="28" Name="result" FontSize="25"></TextBlock>
        </WrapPanel>

    </Grid>
</Window>
